pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'make -c main'
            }
        }
        stage('Test') {
            steps {
                sh 'make -c main test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'make -c main deploy'
            }
        }
    }
    post {
        always {
            sh 'make -c main clean'
        }
        failure {
            echo 'pipeline failed'
        }
    }
}
